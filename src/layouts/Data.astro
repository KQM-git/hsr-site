---
export interface Props {
  title: string;
  description: string;
  breadcrumbs: string[];
}
const { title, description, breadcrumbs } = Astro.props;
import BaseLayout from "./BaseLayout.astro";
import Breadcrumbs from "components/Breadcrumbs.astro";
---

<BaseLayout
  title={`${title} | Data Bank | KQM: Honkai Star Rail`}
  description={description}
>
  {
    breadcrumbs && (
      <Breadcrumbs
        className="ml-4 mt-4 md:ml-32 md:mt-10"
        trail={breadcrumbs}
      />
    )
  }
  <slot />
</BaseLayout>
